<?xml version="1.0" encoding="UTF-8"?>
<mime-info xmlns="http://www.freedesktop.org/standards/shared-mime-info">
   <mime-type type="application/x-flair">
     <alias type="application/flair"/>
     <comment>FLAIR - FLUKA Advanced Interface project</comment>
     <sub-class-of type="text/plain"/>
     <!-- magic priority="50">
       <match value="^Title:" type="string" offset="10:140"/>
     </magic -->
     <glob pattern="*.flair"/>
     <glob pattern="*.FLAIR"/>
   </mime-type>

   <mime-type type="application/x-fluka">
     <alias type="application/fluka"/>
     <comment>FLUKA input file</comment>
     <sub-class-of type="text/plain"/>
     <!-- magic priority="50">
       <match value="^Title:" type="string" offset="10:140"/>
     </magic -->
     <glob pattern="*.inp"/>
     <glob pattern="*.INP"/>
     <glob pattern="*.fluka"/>
     <glob pattern="*.FLUKA"/>
   </mime-type>
</mime-info>
